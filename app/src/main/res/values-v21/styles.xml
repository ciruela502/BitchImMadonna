<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
<style name="AlbumActivityTheme" parent="AppTheme">
    <item name="android:windowEnterTransition">@transition/activity_album_details_enter_transition</item>
</style>

</resources>